<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Waiter</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to waiters_path, class: button_class(theme: "transparent") do %>
      All Waiters
      <% end %>
      <%= link_to edit_waiter_path(@waiter), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @waiter.name %></p>
      </li>
      <li>
        <p class="font-semibold">Information:</p>
        <p><%= @waiter.information %></p>
      </li>
  </ul>
</div>
