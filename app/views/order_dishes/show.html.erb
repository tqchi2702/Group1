<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Order_dish</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to order_dishes_path, class: button_class(theme: "transparent") do %>
      All Order_dishes
      <% end %>
      <%= link_to edit_order_dish_path(@order_dish), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Order:</p>
        <p><%= @order_dish.order %></p>
      </li>
      <li>
        <p class="font-semibold">Dish:</p>
        <p><%= @order_dish.dish %></p>
      </li>
  </ul>
</div>
