<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Dish</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to dishes_path, class: button_class(theme: "transparent") do %>
      All Dishes
      <% end %>
      <%= link_to edit_dish_path(@dish), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @dish.name %></p>
      </li>
      <li>
        <p class="font-semibold">Price:</p>
        <p><%= @dish.price %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @dish.description %></p>
      </li>
      <li>
        <p class="font-semibold">Category:</p>
        <p><%= @dish.category %></p>
      </li>
  </ul>
</div>
